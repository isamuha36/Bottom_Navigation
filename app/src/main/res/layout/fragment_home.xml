<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

<androidx.constraintlayout.widget.ConstraintLayout
    android:id="@+id/home"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeFragment">


    <TextView
        android:id="@+id/txt_selamat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/selamat"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/name"
        android:fontFamily="@font/poppins_regular"
        android:textSize="14sp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@id/txt_selamat"/>

    <ImageView
        android:id="@+id/img_bni"
        android:layout_width="180dp"
        android:layout_height="140dp"
        android:src="@drawable/bni"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/txt_saldo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Saldo"
        android:fontFamily="@font/poppins_medium"
        android:textSize="18sp"
        android:layout_marginStart="16dp"
        app:layout_constraintBottom_toBottomOf="@id/img_bni"
        app:layout_constraintStart_toStartOf="parent"/>

    <View
        android:id="@+id/line1"
        android:layout_width="320dp"
        android:layout_height="2dp"
        android:background="@drawable/line_shape1"
        app:layout_constraintBottom_toBottomOf="@id/txt_saldo"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"/>

    <View
        android:id="@+id/line2"
        android:layout_width="60dp"
        android:layout_height="2dp"
        android:background="@drawable/line_shape2"
        android:layout_marginStart="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/txt_saldo"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/cardAccount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintTop_toBottomOf="@id/line2"
        app:cardCornerRadius="16dp"
        android:elevation="4dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">
            <TextView
                android:id="@+id/tvAccountName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/name"
                android:fontFamily="@font/poppins_medium"
                android:textSize="16sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvAccountDetails"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/account_details"
                android:fontFamily="@font/poppins_regular"
                android:textSize="11sp"
                app:layout_constraintTop_toBottomOf="@id/tvAccountName"
                app:layout_constraintStart_toStartOf="parent"/>

            <ImageView
                android:id="@+id/arrow_down_ic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/baseline_keyboard_arrow_down_24"
                android:layout_marginBottom="16dp"
                app:layout_constraintStart_toEndOf="@id/tvAccountDetails"
                app:layout_constraintTop_toBottomOf="@id/tvAccountName"
                app:layout_constraintBottom_toTopOf="@id/toggleVisibility"/>

            <ImageView
                android:id="@+id/copy_ic"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/baseline_content_copy_24"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

            <TextView
                android:id="@+id/tvRp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Rp"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvAccountDetails"/>

            <TextView
                android:id="@+id/tvBalance"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="********"
                android:textSize="22sp"
                android:fontFamily="@font/poppins_bold"
                android:layout_marginStart="4dp"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toEndOf="@id/tvRp"
                app:layout_constraintTop_toBottomOf="@id/tvAccountDetails"
                app:layout_constraintBottom_toTopOf="@id/btnTarik"/>

            <ImageView
                android:id="@+id/toggleVisibility"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/baseline_visibility_off_24"
                android:layout_marginStart="4dp"
                android:layout_marginBottom="4dp"
                app:layout_constraintStart_toEndOf="@id/tvBalance"
                app:layout_constraintBottom_toTopOf="@id/btnSetor"
                app:layout_constraintTop_toBottomOf="@id/tvAccountDetails"/>

            <Button
                android:id="@+id/btnTarik"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:text="Tarik Tunai"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/orange"
                android:layout_marginTop="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/tvBalance"
                app:layout_constraintWidth_percent="0.37"/>

            <Button
                android:id="@+id/btnSetor"
                android:layout_width="0dp"
                android:layout_height="42dp"
                android:text="Setor Tunai"
                android:textSize="11sp"
                android:fontFamily="@font/poppins_medium"
                android:backgroundTint="@color/orange"
                android:layout_marginTop="10dp"
                android:layout_marginStart="6dp"
                app:layout_constraintStart_toEndOf="@id/btnTarik"
                app:layout_constraintTop_toBottomOf="@id/tvBalance"
                app:layout_constraintWidth_percent="0.37"/>


        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/shortcut_kamu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Shortcut Kamu"
        android:fontFamily="@font/poppins_bold"
        app:layout_constraintTop_toBottomOf="@id/cardAccount"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"/>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_transfer_uang"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/shortcut_kamu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.44">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/coin"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer Uang"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_virtual_account"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="4dp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/shortcut_kamu"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.44">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/va_card"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Virtual Account"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_pulsa_data"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_transfer_uang"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.44">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/phone"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pulsa / Data"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_menu_lengkap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="14dp"
        app:cardCornerRadius="8dp"
        android:elevation="4dp"
        app:layout_constraintTop_toBottomOf="@id/card_virtual_account"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.44">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="14dp">
            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/menu"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Menu Lengkap"
                android:textSize="12sp"
                android:fontFamily="@font/poppins_regular"
                android:layout_gravity="center_vertical"
                android:paddingStart="8dp"/>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/txt_Insight_BNI"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/card_pulsa_data"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Insight BNI"
        android:fontFamily="@font/poppins_bold"/>

    <HorizontalScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintTop_toBottomOf="@id/txt_Insight_BNI"
        app:layout_constraintStart_toStartOf="parent">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                android:layout_margin="4dp"/>
            <ImageView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/img_1"
                android:layout_margin="4dp"/>
            <ImageView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/img"
                android:layout_margin="4dp"/>
            <ImageView
                android:layout_width="160dp"
                android:layout_height="100dp"
                android:src="@drawable/img_1"
                android:layout_margin="4dp"/>
        </LinearLayout>

    </HorizontalScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>